{
  "title": "Ctrl + backspace to option + backspace",
  "rules": [
    {
      "description": "Ctrl + backspace to option + backspace",
      "manipulators": [
        {
          "from": {
            "key_code": "delete_or_backspace",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace",
              "modifiers": [
                "option"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "delete_forward",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "delete_forward",
              "modifiers": [
                "option"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}