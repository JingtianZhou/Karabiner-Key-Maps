{
  "title": "ctrl +1 to opt + cmd +1 ",
  "rules": [
    {
      "description": "ctrl +1 to opt + cmd +1 ",
      "manipulators": [
        {
          "from": {
            "key_code": "1",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "1",
              "modifiers": [
                "left_command",
                "left_option"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "2",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "2",
              "modifiers": [
                "left_command",
                "left_option"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "ctrl + 3 to ctrl + cmd + 3 (For vscode terminal toggle)",
      "manipulators": [
        {
          "from": {
            "key_code": "3",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "3",
              "modifiers": [
                "left_control",
                "left_command"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}